= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :home_team
    = f.number_field :home_team
  .field
    = f.label :away_team
    = f.number_field :away_team
  .field
    = f.label :year
    = f.date_select :year
  .field
    = f.label :venue
    = f.text_field :venue
  .field
    = f.label :date
    = f.date_select :date
  .actions
    = f.submit 'Save'
